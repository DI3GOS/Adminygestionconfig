@model WebApplication008.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<SelectListItem> items = new List<SelectListItem>();
    items.Add(new SelectListItem { Text = "Administrador", Value = "1" });
    items.Add(new SelectListItem { Text = "Docente", Value = "2" });
    items.Add(new SelectListItem { Text = "Estudiante", Value = "3" });
    ViewBag.Rol = items;
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html>
<head>
    <title>Login Estudiantes Uniminuto</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <img class="Bootstrap center-block Image Preview rounded" src="~/Content/logoUniminuto.png" width="330px" height="80px" />
                    @*<div class="d-flex justify-content-end social_icon">
                            <span><i class="fab fa-facebook-square"></i></span>
                            <span><i class="fab fa-google-plus-square"></i></span>
                            <span><i class="fab fa-twitter-square"></i></span>
                        </div>*@
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        @*<form action="~/Login/Index" method="post">*@ <!-- Opcion 1 -->
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @*<input type="text" class="form-control" placeholder="username" required="required">*@
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control input_user text-center", required = "required", placeholder = @Html.DisplayNameFor(m => m.UserName) } })
                            <div class="invalid-feedback input_user text-center">@Html.ValidationMessageFor(model => model.UserName)</div>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @*<input type="password" class="form-control" placeholder="password" required="required">*@
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control input_pass text-center", required = "required", placeholder = @Html.DisplayNameFor(m => m.Password) } })
                            <div class="invalid-feedback input_user text-center">@Html.ValidationMessageFor(model => model.Password)</div>
                        </div>
                        <!-- aca va el select -->
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>

                            @Html.DropDownList("Rol", @ViewBag.Rol as IEnumerable<SelectListItem>, "Seleccione...", new { @class = "form-control", required = "required" })
                            @*@Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "form-control input_pass text-center", required = "required", placeholder = @Html.DisplayNameFor(m => m.Tipo_Usuario) } })*@
                            <div class="invalid-feedback input_user text-center">@Html.ValidationMessageFor(model => model.Rol)</div>
                        </div>
                        @*<div class="row align-items-center remember">
                                <input type="checkbox">Remember Me
                            </div>*@
                        <div class="form-group">
                            <input type="submit" value="Ingresar" class="btn float-md-right login_btn">
                        </div>
                        @*</form>*@
                        @Html.ValidationMessage("mensajeErrorName", new { @class = "text-warning" })
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        No tiene cuenta?
                        @Html.ActionLink("Registrese", "Create", "Usuarios", null, new { @class = "ml-2", @style = "color:white;" })
                    </div>
                    @*<div class="d-flex justify-content-center">
                            <a href="#">Forgot your password?</a>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</body>
</html>