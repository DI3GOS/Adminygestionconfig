@model IEnumerable<WebApplication008.Models.Materias_estudiantesModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materias Estudiante</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create")
</p>

<table class="table">
    <tr>
        <th>
            <label>ROL</label>
        </th>
        <th>
            <label>USUARIOS</label>
        </th>
        <th>
            <label>MATERIA</label>
        </th>
        <th></th>
    </tr>
    <!-- Se agrega este tr -->
    <tr>
        <td>
            @Html.DropDownList("Rol", @ViewBag.Rol as IEnumerable<SelectListItem>, "Seleccione...", new { @class = "form-control", required = "required" })
        </td>
        <td>
            @Html.DropDownList("Estudiantes", @ViewBag.Estudiantes as IEnumerable<SelectListItem>, "Seleccione...", new { @class = "form-control", required = "required" })
        </td>
        <td>
            @Html.DropDownList("Materias", @ViewBag.Materia as IEnumerable<SelectListItem>, "Seleccione...", new { @class = "form-control", required = "required" })
        </td>
        <td></td>
        <td>
            <form class="form-inline my-2 my-lg-0" method="post">
                <input class="form-control mr-sm-2" type="text" name="inputBuscar" placeholder="Buscar por Nombre">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Consultar</button>
            </form>
        </td>
    </tr>
</table>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_materia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Usuario)
        </th>
        <th></th>
    </tr>    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_materia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Usuario)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_materia_estudiante }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id_materia_estudiante }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_materia_estudiante })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Regresar al menu", "Index", "Home")
</div>
